                <RadzenPanelMenuItem Text="Custom 2"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Custom 3"></RadzenPanelMenuItem>
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Datasets" Icon="analytics">
                <RadzenPanelMenuItem Text="Dataset 1"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Dataset 2"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Dataset 3"></RadzenPanelMenuItem>
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Sandbox" Icon="science">
                <RadzenPanelMenuItem Text="Face Tracking" Icon="face_4" Path="sandbox/facetracking"/>
            </RadzenPanelMenuItem>
        </RadzenPanelMenu>
    </RadzenSidebar>
    <RadzenBody>
        <div class="rz-p-4">
            @Body
        </div>
    </RadzenBody>
</RadzenLayout>


<RadzenDialog/>
<RadzenTooltip/>

@code {
    bool sidebar1Expanded = true;
}
