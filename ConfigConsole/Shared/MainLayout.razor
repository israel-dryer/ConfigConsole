                </RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Device" Icon="phone_iphone" Path="general/device"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Equipment" Icon="precision_manufacturing" Path="general/equipment"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Facility" Icon="domain" Path="general/facility"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Integration" Icon="hub" Path="general/integration"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Labor" Icon="people_alt" Path="general/labor"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Logging" Icon="text_snippet" Path="general/logging"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Material" Icon="inventory_2" Path="general/material"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Media" Icon="perm_media" Path="general/media"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Monitor" Icon="cast" Path="general/monitor"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Onsite" Icon="groups" Path="general/onsite"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Profile" Icon="assignment_ind" Path="general/profile"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Property" Icon="settings" Path="general/property"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Security" Icon="privacy_tip" Path="general/security"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Task" Icon="task" Path="general/task"></RadzenPanelMenuItem>
