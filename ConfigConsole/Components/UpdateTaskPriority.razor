@page "/taskpriority/{selectedTask}"
@inject DialogService DialogService


<RadzenStack>

    <RadzenNumeric @bind-Value="selectedValue" Min="0" TextAlign="TextAlign.Center"/>
     
    <RadzenStack Orientation="Orientation.Horizontal" Gap="2" JustifyContent="JustifyContent.Stretch">
        <!-- small screen -->
        <RadzenButton Text="Cancel" Click="@(args => DialogService.Close(true))" ButtonStyle="ButtonStyle.Light" class="flex-fill" />
        <RadzenButton Click="UpdateSelectedTask" Text="Ok" class="flex-fill" />
    </RadzenStack>

</RadzenStack>
