<RadzenChart>
    <RadzenText Text="Concurrent Users - Last 30 Days" TextStyle="TextStyle.H5"/>
    <RadzenAreaSeries Data="chartData" CategoryProperty="RecordDate" ValueProperty="Amount" Smooth=true Title="User Count">
        <RadzenMarkers MarkerType="MarkerType.Circle"/>
    </RadzenAreaSeries>
    <RadzenLegend Visible=false/>
    <RadzenCategoryAxis Padding="20"/>
    <RadzenValueAxis>
        <RadzenGridLines Visible=true/>
        <RadzenAxisTitle Text="Concurrent User Count"/>
    </RadzenValueAxis>
</RadzenChart>


@code {

    private record UserCount(DateTime RecordDate, int Amount);
    private List<UserCount> chartData = default!;

    protected override void OnInitialized()
    {
        chartData = new();
        var startDate = DateTime.Today.AddDays(-30);

        // Create random data for the chart
        for (int i = 0; i < 30; i++)
        {
            chartData.Add(new UserCount(startDate.AddDays(i), new Random().Next(100, 120)));
        }


    }

}
