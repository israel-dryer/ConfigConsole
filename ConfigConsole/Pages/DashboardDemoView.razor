@page "/dashboard"
@using System.Globalization
@using ConfigConsole.Components
@using ConfigConsole.Components.Charts

<PageTitle>Home</PageTitle>

<RadzenText TextStyle="TextStyle.DisplayH4" Text="System Dashboard" class="mb-4" />

<RadzenStack Orientation="Orientation.Horizontal" Wrap="FlexWrap.Wrap" JustifyContent="JustifyContent.Stretch" AlignItems="AlignItems.Stretch">

    <div class="row px-3 my-0 py-0">
        <div class="col-12 col-lg-6 mx-0 my-1 px-1">
            <DashboardCard Title="125" Subtitle="Concurrent Users" CardBackgroundColor="rz-background-color-base-500"
                           TitleTextColor="rz-color-on-primary" SubtitleIconColor="rz-color-base-300" Icon="group" />
        </div>
        <div class="col-12 col-lg-6 mx-0 my-1 px-1">
            <DashboardCard Title="99.6%" Subtitle="Avg Uptime" CardBackgroundColor="rz-background-color-base-600"
                           TitleTextColor="rz-color-on-primary" SubtitleIconColor="rz-color-base-300" Icon="watch_later" />
        </div>
        <div class="col-12 col-lg-6 mx-0 my-1 px-1">
            <DashboardCard Title="7" Subtitle="Integration / Batch Errors" CardBackgroundColor="rz-background-color-base-700"
                           TitleTextColor="rz-color-on-primary" SubtitleIconColor="rz-color-base-300" Icon="warning" />
        </div>
        <div class="col-12 col-lg-6 mx-0 my-1 px-1">
            <DashboardCard Title="23.5%" Subtitle="Available Storage" CardBackgroundColor="rz-background-color-base-800"
                           TitleTextColor="rz-color-on-primary" SubtitleIconColor="rz-color-base-300" Icon="storage" />
        </div>
    </div>

    <div class="row px-3 my-0 py-0">
        <div class="col-12 mx-0 my-1 px-1">
            <RadzenCard class="m-0">
                <UserCountChart />
            </RadzenCard>
        </div>
        <div class="col-12 mx-0 my-1 px-1">
            <RadzenCard class="m-0">
                <SystemErrorsChart />
            </RadzenCard>
        </div>
        <div class="col-12 mx-0 my-1 px-1">
            <RadzenCard class="m-0">
                <StorageChart />
            </RadzenCard>
        </div>
    </div>


</RadzenStack>
